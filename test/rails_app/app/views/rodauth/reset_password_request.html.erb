<% root_path # test that Rails routes still work %>

<%= form_tag rodauth.reset_password_request_path, method: :post, id: "custom-reset-password-request-form" do %>
  <% if params[rodauth.login_param] && !rodauth.field_error(rodauth.login_param) %>
    <%= hidden_field_tag rodauth.login_param, params[rodauth.login_param] %>
  <% else %>
    <%= email_field_tag rodauth.login_param, params[rodauth.login_param] %>
  <% end %>
  <%= submit_tag "Request Password Reset" %>
<% end %>
